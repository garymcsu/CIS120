void setup() {
  pinMode(red, OUTPUT);
  pinMode(yellow, OUTPUT); 
  pinMode(green, OUTPUT);
  pinMode(blue, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP);

  pinMode(rred, OUTPUT);
  pinMode(yyellow, OUTPUT);
  pinMode(ggreen, OUTPUT);
  pinMode(bblue, OUTPUT);
  pinMode(bbuttonPin, INPUT_PULLUP);
  }
void loop(){
    changeLights();
    delay(3000); // transition from red to green
}
